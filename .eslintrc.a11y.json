{
  "root": true,
  "plugins": ["react", "jsx-a11y"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": ["plugin:jsx-a11y/recommended"],
  "rules": {
    "jsx-a11y/control-has-associated-label": [
      "off",
      {
        "ignoreElements": ["audio", "canvas", "embed", "tr", "video"],
        "ignoreRoles": [
          "grid",
          "listbox",
          "menu",
          "menubar",
          "radiogroup",
          "row",
          "tablist",
          "toolbar",
          "tree",
          "treegrid"
        ],
        "includeRoles": ["alert", "dialog"]
      }
    ]
  }
}
